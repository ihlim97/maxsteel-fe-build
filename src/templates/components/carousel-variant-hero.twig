<div class="swiper-container carousel variant-hero">
    <div class="swiper-wrapper">
        {% for item in 1..3 %}
            <div class="swiper-slide">
                <div class="slide-layout">
                    <div class="slide-background">
                        <img src="assets/img/warehouse-1.jpg" alt="">
                    </div>
                    <div class="content px-3 px-md-5">
                        <p class="display-3">PROVIDING MATERIALS FOR A BETTER WORLD</p>
                        <p class="mb-5">MAXSTEEL is the leading manufacturer of steel and other precision materials for over 100 years. Trusted by customers around the globe, MAXSTEEL continously deliver the best materials according to our customer's expectations.</p>
                        <a href="/products.html" class="btn btn-secondary">VIEW PRODUCTS</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="carousel-controls px-3 px-md-5">
        <div class="swiper-button-prev">
            <svg>
                <use xlink:href="assets/icons/icons.svg#sprite-long-arrow" href="assets/icons/icons.svg#sprite-long-arrow"></use>
            </svg>
        </div>
        <div class="swiper-pagination">3 / 5</div>
        <div class="swiper-button-next">
            <svg>
                <use xlink:href="assets/icons/icons.svg#sprite-long-arrow" href="assets/icons/icons.svg#sprite-long-arrow"></use>
            </svg>
        </div>
    </div>
</div>