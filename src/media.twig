{% extends "templates/partials/base.twig" %}

{% block main %}
<div class="container-fluid px-3 px-md-5 py-5">
    <h1 class="h3 p2 mb-6">MEDIA</h1>

    {% set headers = [
        'FACILITIES',
        'PRODUCTS',
        'PARTNERSHIPS',
        'EVENTS'
    ] %}

    {% for header in headers %}
        <div class="row align-items-end">
            <div class="col-8 col-md-6">
                {% embed "templates/components/title.twig" with {
                    colourVariant: 'p1'
                } %}
                    {% block text %}
                        <h4 class="text mb-4">{{ header }}</h4>
                    {% endblock %}
                {% endembed %}
            </div>
            <div class="col-4 col-md-6 text-right mb-4">
                <a href="#" class="lk1 p1"><strong>VIEW MORE</strong></a>
            </div>
        </div>
        <ul class="list variant-media mb-6">
            {% set cardImages = [
                'welding.jpg',
                'production-line-1.jpg',
                'production-line-2.jpg'
            ] %}
            {% for item in 1..3 %}
                <li class="list-item">
                    <a href="" class="no-text-decoration">
                        <div class="card variant-4">
                            <div class="card-thumbnail">
                                <div class="img-aspect-ratio variant-1:1 variant-md-4:3">
                                    <img src="assets/img/{{ cardImages[loop.index - 1] }}" alt="Card thumbnail">
                                </div>
                            </div>
                            <div class="card-content">
                                {% if header == 'EVENTS' %}
                                    <small class="date">27/03/2020</small>
                                {% endif %}
                                <p class="card-title">Lorem ipsum dolor sit amet consectetur adipisicing elit. Aperiam.</p>
                                {% include "templates/components/icon.twig" with {
                                    iconName: 'right-arrow',
                                    iconSize: 'm'
                                } %}
                            </div>
                        </div>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endfor %}
</div>

{% endblock %}