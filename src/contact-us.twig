{% extends "templates/partials/base.twig" %}

{% block main %}

<div class="container-fluid px-3 px-md-5 pt-5 pb-4">
    <h1 class="h3 p1">CONTACT US</h1>
</div>

<div class="container-fluid section variant-6 mb-5">
    <div class="row">
        <div class="col-12 col-md-6 pl-md-0">
            <div class="img-aspect-ratio variant-16:9 variant-md-4:5">
                <img src="assets/img/warehouse-2.jpg" alt="">
            </div>
        </div>
        <div class="col-12 col-md-6 px-md-5 pt-5">
            {% embed "templates/components/title.twig" with {
                colourVariant: 'p1'
            } %}
                {% block text %}
                    <h2 class="h4 mb-4">MAXSTEEL SINGAPORE</h2>
                {% endblock %}
            {% endembed %}

            <ul class="list variant-icon">
                <li class="list-item">
                    <div class="icon">
                        <svg class="icon icon-m p1">
                            <use href="assets/icons/icons.svg#sprite-location"></use>
                        </svg>
                    </div>
                    <div class="content">
                        <p class="h6 p1 text-uppercase">MaxSteel Enterprise Private Limited European Trafo Products Private Limited</p>
                    </div>
                </li>
                <li class="list-item">
                    <div class="icon">
                        <svg class="icon icon-m p1">
                            <use href="assets/icons/icons.svg#sprite-pindrop"></use>
                        </svg>
                    </div>
                    <div class="content">
                        <p class="p1">74 & 76 Senoko Drive Singapore 758241</p>
                    </div>
                </li>
                <li class="list-item">
                    <div class="icon">
                        <svg class="icon icon-m p1">
                            <use href="assets/icons/icons.svg#sprite-phone"></use>
                        </svg>
                    </div>
                    <div class="content">
                        <p class="p1"><span class="h6">PHONE</span> <a class="lk1" href="tel:6567528885">+65 6752 8885</a></p>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <div class="row overlay-layer d-none d-md-flex rellax" data-rellax-speed="4">
        <div class="col-11 offset-1 col-md-7 offset-md-5 pr-md-5">
            <div class="img-aspect-ratio variant-16:6">
                <img src="assets/img/warehouse-1.jpg" alt="">
            </div>
        </div>
    </div>
</div>

<div class="container-fluid section variant-6 pt-5 mb-5">
    <div class="row flex-row-reverse">
        <div class="col-12 col-md-6 pr-md-5">
            <div class="img-aspect-ratio variant-16:9 variant-md-4:5">
                <img src="assets/img/warehouse-3.jpg" alt="">
            </div>
        </div>
        <div class="col-12 col-md-6 px-md-5 pt-5 pl-md-0">
            {% embed "templates/components/title.twig" with {
                colourVariant: 'p1'
            } %}
                {% block text %}
                    <h2 class="h4 mb-4">MAXSTEEL CHINA</h2>
                {% endblock %}
            {% endembed %}

            <ul class="list variant-icon">
                <li class="list-item">
                    <div class="icon">
                        <svg class="icon icon-m p1">
                            <use href="assets/icons/icons.svg#sprite-location"></use>
                        </svg>
                    </div>
                    <div class="content">
                        <p class="h6 p1 text-uppercase">MaxSteel Corporation (Suzhou) Limited</p>
                    </div>
                </li>
                <li class="list-item">
                    <div class="icon">
                        <svg class="icon icon-m p1">
                            <use href="assets/icons/icons.svg#sprite-pindrop"></use>
                        </svg>
                    </div>
                    <div class="content">
                        <p class="p1">No. 118 Xinjiang Road, Shengpu Sub-District, Suzhou Industrial Park, Jiangsu Province, Postal Code: 21528, P.R. China</p>
                    </div>
                </li>
                <li class="list-item">
                    <div class="icon">
                        <svg class="icon icon-m p1">
                            <use href="assets/icons/icons.svg#sprite-phone"></use>
                        </svg>
                    </div>
                    <div class="content">
                        <p class="p1"><span class="h6">PHONE</span> <a class="lk1" href="tel:6567528885">+65 6752 8885</a></p>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <div class="row overlay-layer d-none d-md-flex rellax" data-rellax-speed="1">
        <div class="col-11 offset-1 col-md-7 offset-md-0 pl-md-0">
            <div class="img-aspect-ratio variant-16:6">
                <img src="assets/img/factory-floor-1.jpg" alt="">
            </div>
        </div>
    </div>
</div>
{% endblock %}