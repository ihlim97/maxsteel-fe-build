{% extends "templates/partials/base.twig" %}

{% block main %}

    {% include "templates/components/header-variant-video.twig" %}

    {# {% include "templates/components/carousel-variant-hero.twig" %} #}

    <div class="container-fluid px-3 px-md-5 pt-5">
        <div class="row mb-5">
            <div class="col-12 col-md-5 d-flex flex-column">
                {% embed "templates/components/title.twig" with { 
                    colourVariant: 'p1',
                } %}
                    {% block text %}
                        <h3 class="text animated text-slide-in">PRECISE, ACCURATE AND EXPERT STEEL MANUFACTURING.</h3>
                    {% endblock %}
                {% endembed %}
                <div class="vertical-line"></div>
            </div>
            <div class="col-12 col-md-7">
                {% include "templates/components/card-variant-1.twig" with {
                    orientation: 'horizontal',
                    image: 'assets/img/warehouse.png',
                    ctaText: 'VISIT MAXSTEEL',
                    ctaLink: '/visit-maxsteel.html'
                } %}
                <div class="row pt-4">
                    <div class="col-12 col-md-6 mb-4">
                        {% include "templates/components/card-variant-1.twig" with {
                            orientation: 'vertical',
                            image: 'assets/img/welding.png',
                            ctaText: 'Services',
                            ctaLink: '/services.html'
                        } %}
                    </div>
                    <div class="col-12 col-md-6">
                        {% include "templates/components/card-variant-1.twig" with {
                            orientation: 'vertical',
                            image: 'assets/img/steel-rolls.png',
                            ctaText: 'Products',
                            ctaLink: '/products.html'
                        } %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid px-3 px-md-5 bg-gray-200 py-5">
        <div class="row">
            <div class="col-12 pt-md-5">
                {% embed "templates/components/title.twig" with {
                    colourVariant: 'p1 pt-md-5'
                } %}
                    {% block text %}
                        <h3 class="text animated text-slide-in">WHY CHOOSE US</h3>
                    {% endblock %}
                {% endembed %}
            </div>
            <div class="col-12">
                {% include "templates/components/list-variant-usp.twig" %}
            </div>
        </div>
    </div>

    <div class="container-fluid px-3 px-md-5 py-5">
        <div class="row">
            <div class="col-12 col-md-5">
                {% embed "templates/components/title.twig" with {
                    colourVariant: 'p1'
                } %}
                    {% block text %}
                        <h3 class="text animated text-slide-in">SOME OF THE CLIENTS WE HAVE HAD THE PRIVILEGE TO WORK WITH</h3>
                    {% endblock %}
                {% endembed %}
            </div>
            <div class="col-12 col-md-6 offset-md-1 pt-5 pt-md-0">
                {% set logos = [
                    'cisco.jpg',
                    'dell.jpg',
                    'diethelm.jpg',
                    'flex.jpg',
                    'hdb.jpg',
                    'hp.jpg',
                    'ibm.jpg',
                    'interplex.jpg',
                    'nanyang.jpg',
                    'nikon.jpg',
                    'nus.jpg',
                    'oral-b.jpg',
                    'schneider.jpg',
                    'seagate.jpg',
                    'shimano.jpg',
                    'singapore-polytechnic.jpg',
                    'singapore-sports-hub.jpg',
                    'technip-fmc.jpg',
                    'wesgate.jpg',
                ] %}

                <div class="carousel variant-client-logos swiper-container">
                    <div class="swiper-wrapper">
                        {% for logo in logos %}
                            <div class="swiper-slide">
                                <div class="img-aspect-ratio variant-16:9">
                                    <img src="assets/img/clients/{{logo}}" alt="">
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
            </div>
        </div>
    </div>
{% endblock %}